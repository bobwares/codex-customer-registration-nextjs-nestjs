{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "customer-registration/customer_domain-entities.json",
  "title": "customer_domain Domain Entities",
  "type": "object",
  "x-db": { "schema": "customer_domain" },
  "definitions": {
    "PostalAddress": {
      "type": "object",
      "properties": {
        "postal_address_id": { "type": "integer" },
        "line1": { "type": "string", "maxLength": 255 },
        "line2": { "type": "string", "maxLength": 255 },
        "city": { "type": "string", "maxLength": 100 },
        "state": { "type": "string", "maxLength": 50 },
        "postal_code": { "type": "string", "maxLength": 20 },
        "country": { "type": "string", "minLength": 2, "maxLength": 2 }
      },
      "required": [
        "postal_address_id",
        "line1",
        "city",
        "state",
        "postal_code",
        "country"
      ],
      "x-db": {
        "primaryKey": ["postal_address_id"],
        "foreignKey": [],
        "unique": [],
        "indexes": []
      }
    },
    "PrivacySettings": {
      "type": "object",
      "properties": {
        "privacy_settings_id": { "type": "integer" },
        "marketing_emails_enabled": { "type": "boolean" },
        "two_factor_enabled": { "type": "boolean" }
      },
      "required": [
        "privacy_settings_id",
        "marketing_emails_enabled",
        "two_factor_enabled"
      ],
      "x-db": {
        "primaryKey": ["privacy_settings_id"],
        "foreignKey": [],
        "unique": [],
        "indexes": []
      }
    },
    "Customer": {
      "type": "object",
      "properties": {
        "customer_id": { "type": "string", "format": "uuid" },
        "first_name": { "type": "string", "maxLength": 255 },
        "middle_name": { "type": "string", "maxLength": 255 },
        "last_name": { "type": "string", "maxLength": 255 },
        "address_id": { "type": "integer" },
        "privacy_settings_id": { "type": "integer" }
      },
      "required": [
        "customer_id",
        "first_name",
        "last_name"
      ],
      "x-db": {
        "primaryKey": ["customer_id"],
        "foreignKey": [
          { "column": "address_id", "ref": "PostalAddress.postal_address_id" },
          { "column": "privacy_settings_id", "ref": "PrivacySettings.privacy_settings_id" }
        ],
        "unique": [],
        "indexes": [
          ["address_id"],
          ["privacy_settings_id"]
        ]
      }
    },
    "CustomerEmail": {
      "type": "object",
      "properties": {
        "customer_email_id": { "type": "integer" },
        "customer_id": { "type": "string", "format": "uuid" },
        "email": { "type": "string", "maxLength": 255 }
      },
      "required": [
        "customer_email_id",
        "customer_id",
        "email"
      ],
      "x-db": {
        "primaryKey": ["customer_email_id"],
        "foreignKey": [
          { "column": "customer_id", "ref": "Customer.customer_id" }
        ],
        "unique": [
          ["customer_id", "email"]
        ],
        "indexes": [
          ["customer_id"]
        ]
      }
    },
    "CustomerPhoneNumber": {
      "type": "object",
      "properties": {
        "customer_phone_number_id": { "type": "integer" },
        "customer_id": { "type": "string", "format": "uuid" },
        "type": { "type": "string", "maxLength": 20 },
        "number": { "type": "string", "maxLength": 20 }
      },
      "required": [
        "customer_phone_number_id",
        "customer_id",
        "type",
        "number"
      ],
      "x-db": {
        "primaryKey": ["customer_phone_number_id"],
        "foreignKey": [
          { "column": "customer_id", "ref": "Customer.customer_id" }
        ],
        "unique": [
          ["customer_id", "number"]
        ],
        "indexes": [
          ["customer_id"]
        ]
      }
    }
  }
}
